    font-size: 30rpx;
    background-color: #F3F3F3;
    border-radius: 12rpx;
}
.message_list{
  background-color: #f2f2f2;
  padding-left: 8rpx;
  padding-right: 8rpx;
}
.plan_list{
margin-top: 25rpx;
}
.wa-item-ava{
  padding-left:60px;
  min-height: 60px;
}
.wa-item-ava .item-img-round{
  position:absolute;
  top:10px;
  left: 10px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.wa-item-thumbnail-left{
  padding-left:100px;
  min-height: 100px;
}
.wa-list{
  width:100%;
  position:relative;
}
.wa-item{
  width: 100%;
  border: 1px solid #ddd;
  margin: -1px 0;  
  font-size: 16px;
  display: block;
  color: #444;
  padding:10px;
  height: 40px;
  box-sizing: border-box;
  position:relative;
  background-color: #fff;
}
.operation{
  float: right;
  margin-bottom: 45rpx;
}

.operation .flex-item{
  margin-right: 40rpx;
  display: inline-block;
}

.operation image{
  display: block;
  margin: 0 auto;
  width: 50rpx;
  height: 50rpx;
}

.divLine{
  clear: both;
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}

.detail_header {
  display: flex;
}

.detail_header image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  float: left;
  border-radius: 40rpx;
  overflow: hidden;
}

.answer-actions{
  width: 690rpx;
  padding: 10rpx 0  0;
  color: #a0acac;
}

.answer-actions view{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 35rpx;
  margin-right: 20rpx;
}
